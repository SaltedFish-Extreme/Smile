<?xml version="1.0" encoding="utf-8"?><!--确认弹窗布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_16"
        tools:text="@string/bind_hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.2"
        android:background="@color/color_line_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_10"
            android:text="@string/cancel"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="@dimen/dp_0.2"
            android:layout_height="match_parent"
            android:background="@color/color_line_divider" />

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_10"
            android:text="@string/sure"
            android:textColor="?colorAccent"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>