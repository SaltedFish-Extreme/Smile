<?xml version="1.0" encoding="utf-8"?><!--底部弹窗布局(遇到问题)-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_ando_dialog_bottom"
    android:backgroundTint="@color/day_on_night"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_ando_dialog_bottom_radius">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="@string/choose_problems"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_search_box" />

    <TextView
        android:id="@+id/forgot_password"
        style="@style/BottomDialogTextStyle"
        android:text="@string/forgot_password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/color_search_box" />

    <TextView
        android:id="@+id/contact_customer_service"
        style="@style/BottomDialogTextStyle"
        android:text="@string/contact_customer_service" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/color_search_box" />

    <TextView
        android:id="@+id/want_feedback"
        style="@style/BottomDialogTextStyle"
        android:text="@string/want_feedback" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/color_search_box" />

    <TextView
        android:id="@+id/cancel"
        style="@style/BottomDialogTextStyle"
        android:text="@string/cancel" />

</LinearLayout>