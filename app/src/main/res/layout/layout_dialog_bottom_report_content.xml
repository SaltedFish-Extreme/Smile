<?xml version="1.0" encoding="utf-8"?><!--底部弹窗布局(举报内容)-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_ando_dialog_bottom"
    android:backgroundTint="@color/day_on_night"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/select_action_option"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_search_box" />

    <!--用户举报-->
    <LinearLayout
        android:id="@+id/report_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/report_user"
            style="@style/BottomDialogTextStyle"
            android:text="@string/report_user" />
    </LinearLayout>

    <!--段子举报-->
    <LinearLayout
        android:id="@+id/report_joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/report_publisher"
            style="@style/BottomDialogTextStyle"
            android:text="@string/report_publisher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/color_search_box" />

        <TextView
            android:id="@+id/report_content"
            style="@style/BottomDialogTextStyle"
            android:text="@string/report_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/color_search_box" />

        <TextView
            android:id="@+id/not_interested"
            style="@style/BottomDialogTextStyle"
            android:text="@string/not_interested" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_bottom_sheet_blank" />

    <TextView
        android:id="@+id/cancel"
        style="@style/BottomDialogTextStyle"
        android:text="@string/cancel" />

</LinearLayout>