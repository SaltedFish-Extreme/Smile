<?xml version="1.0" encoding="utf-8"?><!--段子详情页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bottom_sheet_blank"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        style="@style/TitleBar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/item_joke_content_list" />

            <include layout="@layout/include_viewpager" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/include_input_comment" />

</LinearLayout>