<?xml version="1.0" encoding="utf-8"?><!--输入栏弹窗布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:hint="@string/edit_dialog_update_hint"
        android:imeOptions="actionDone"
        android:maxLength="15"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <Button
            android:id="@+id/bt_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_circle_button_selector_disabled"
            android:text="@string/cancel"
            android:textColor="?android:attr/textColorPrimary" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/bt_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sure"
            android:textColor="?android:attr/textColorPrimary" />

    </LinearLayout>

</LinearLayout>